<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Disability">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        android:text="Prima dimmi se soffri di qualche disabilitÃ :"
        android:textAlignment="center"
        android:textSize="8mm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_blind"
        android:layout_width="200dp"
        android:layout_height="174dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="146dp"
        android:background="@drawable/custom_button"
        android:text="Visiva"
        android:textColor="#FFFFFF"
        android:textSize="5mm"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_deaf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.387" />

    <Button
        android:id="@+id/button_deaf"
        android:layout_width="200dp"
        android:layout_height="174dp"
        android:layout_marginBottom="146dp"
        android:background="@drawable/custom_button"
        android:text="Uditiva"
        android:textColor="#FFFFFF"
        android:textSize="5mm"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_blind"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.386" />

    <Button
        android:id="@+id/button_mute"
        android:layout_width="200dp"
        android:layout_height="174dp"
        android:layout_marginBottom="46dp"
        android:background="@drawable/custom_button"
        android:text="Vocale"
        android:textColor="#FFFFFF"
        android:textSize="4mm"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button_blind"
        app:layout_constraintTop_toBottomOf="@+id/button_blind" />

    <Button
        android:id="@+id/button_other"
        android:layout_width="200dp"
        android:layout_height="174dp"
        android:layout_marginBottom="46dp"
        android:background="@drawable/custom_button"
        android:text="Fisica"
        android:textColor="#FFFFFF"
        android:textSize="5mm"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/button_deaf"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button_mute"
        app:layout_constraintTop_toBottomOf="@+id/button_deaf"
        app:layout_constraintVertical_bias="0.501" />

    <Button
        android:id="@+id/button_colorblind"
        android:layout_width="200dp"
        android:layout_height="174dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_button"
        android:text="Daltonismo"
        android:textColor="#FFFFFF"
        android:textSize="4mm"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_almostBlind"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.51" />

    <Button
        android:id="@+id/button_almostBlind"
        android:layout_width="200dp"
        android:layout_height="174dp"
        android:background="@drawable/custom_button"
        android:text="Ipovedente"
        android:textColor="#FFFFFF"
        android:textSize="4mm"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_colorblind"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.51" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>