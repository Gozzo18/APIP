<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Disability">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        android:text="Do you have any disabilities?"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_blind"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/custom_button"
        android:text="visual"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_deaf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.303" />

    <Button
        android:id="@+id/button_deaf"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/custom_button"
        android:text="auditory"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_blind"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/button_mute"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/custom_button"
        android:text="vowel"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button_blind"
        app:layout_constraintTop_toBottomOf="@+id/button_blind" />

    <Button
        android:id="@+id/button_none"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/custom_button"
        android:text="No"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/button_deaf"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button_mute"
        app:layout_constraintTop_toBottomOf="@+id/button_deaf"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/button_color_blind"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/custom_button"
        android:text="color blind"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_visually_impaired"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/button_visually_impaired"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/custom_button"
        android:text="visually impaired"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_color_blind"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.3" />

</androidx.constraintlayout.widget.ConstraintLayout>
